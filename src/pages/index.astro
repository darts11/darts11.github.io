---
import Header from "../components/Header.astro";
import Sidebar from "../components/Sidebar.astro";
---


<!DOCTYPE html>
<html
>
  <Header title="Christopher Han" />
  <body>
    <div class="content">
      <Sidebar selectedItem="home" />
      <nav class="main">
        <div class="container">
          <main class="fold-content-container">
            <div class="fold-content">
              <h1>Hi! I'm Christopher Han.<br />A High school senior with ambitious goals.</h1>
              <p class="lead">
                Veteran mentor for students competing in the Pokemon Video Game. Website developer that has created resources for members of the community to use!
              </p>
            </div>
            <a href="https://x.com/dartsvg" class="button w-button">Contact</a>
          </main>
          <div class="projects-section">
            <!-- Coding -->
            <a href="/websites" class="projects-container">
              <div class="single-projects-category">
                <div class="projects-category-image-container">
                  <img src="./assets/browser.svg" loading="lazy" alt="" class="projects-category-image" />
                </div>
              </div>
              <div class="single-projects-content">
                <h4>Coding Experience</h4>
                <div class="tech-tools-container">
                  <div class="mini-label-white gray-color">Technologies &amp; tools</div>
                  <div class="chips-container chips-container-small-width">
                    <div class="single-chip small-chip">React</div>
                    <div class="single-chip small-chip">C#</div>
                    <div class="single-chip small-chip">Python</div>
                    <div class="single-chip small-chip">Javascript</div>
                    <div class="single-chip small-chip">HTML</div>
                    <div class="single-chip small-chip">CSS</div>
                    <div class="single-chip small-chip">Java</div>
                    <div class="single-chip small-chip">TypeScript</div>
                    <div class="single-chip small-chip">NestJS</div>
                    <div class="single-chip small-chip">Angular</div>
                    <div class="single-chip small-chip">Postgres</div>
                  </div>
                </div>
              </div>
            </a>
            <!-- Papers -->
            <a href="/papers" class="projects-container">
              <div class="single-projects-category">
                <div class="projects-category-image-container devops-img">
                  <img src="./assets/database.svg" loading="lazy" alt="" class="projects-category-image" />
                </div>
              </div>
              <div class="single-projects-content">
                <h4>Written Works</h4>
                <div class="tech-tools-container">
                  <div class="mini-label-white gray-color">Math Modeling</div>
                  <div class="chips-container chips-container-small-width">
                    <div class="single-chip small-chip">Risk Analysis of Nashville Electricity Usage</div>
                    <br></br>
                    <div class="single-chip small-chip">Electricity Usage of Data Centers</div>
                    <br></br>
                    <div class="single-chip small-chip">Urban Head Island Effect</div>
                    <br></br<
                    <div class="single-chip small-chip">Pokemon Blog</div>
                  </div>
                </div>
              </div>
            </a>
          </div>
        </div>
      </nav>
    </div>

    <!--[if lte IE 9]><script src="//cdnjs.cloudflare.com/ajax/libs/placeholders/3.0.2/placeholders.min.js"></script><![endif]-->
  </body>
</html>